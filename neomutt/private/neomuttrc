set editor = "nvim"
auto_view text/html
set from = "ytg <`pass mail/private/gmail/user`@gmail.com>"

# IMAP settings
set imap_user = "`pass mail/private/gmail/user`@gmail.com"
set imap_pass = "`pass mail/private/gmail/password`"
set folder = "imaps://imap.gmail.com"
set spoolfile = "+INBOX"
# set record = "+[Gmail]/Elküldött levelek"
set postponed = "+[Gmail]/Piszkozatok"
set trash = "+[Gmail]/Kuka"

mailboxes =INBOX =[Gmail]/Elküldött\ levelek =[Gmail]/Piszkozatok =[Gmail]/Spam =[Gmail]/Kuka =[Gmail]/Összes\ levél

set header_cache = ~/.cache/neomutt/header/
set message_cache_dir = ~/.cache/neomutt/body

# SMTP settings
set smtp_url = "smtp://`pass mail/private/gmail/user`@smtp.gmail.com:587/"
set smtp_pass = "`pass mail/private/gmail/password`"

# Securing
set ssl_force_tls = yes
# To avoid certificate errors
set ssl_starttls=yes
set ssl_use_sslv3=no
set ssl_use_tlsv1=no
set ssl_use_tlsv1_1=no
set ssl_use_tlsv1_2=yes
set ssl_verify_dates=yes
set ssl_verify_host=yes

color normal		  default default         # Text is "Text"
color index		    color170 default ~N     # New Messages are Pinkish Purple
color index		    color141 default ~F     # Flagged messages are Dark Purple
color index		    color170 default ~T     # Tagged Messages are Pinkish Purple
color index		    color141 default ~D     # Messages to delete are Dark Purple
color attachment	color135 default        # Attachments are Medium Purple
color signature	  color170 default        # Signatures are Pinkish Purple
color search		  color170 default        # Highlighted results are Pinkish Purple

color indicator		color233 color189        # currently highlighted message Text=Default Light Purple=Background
color error		    color141 default        # error messages are Dark Purple
color status		  color135 default        # status line "Subtext 0"
color tree        color135 default        # thread tree arrows Subtext 0
color tilde       color135 default        # blank line padding Subtext 0

color hdrdefault  color170 default        # default headers Pinkish Purple
color header		  color170 default "^From:"
color header	 	  color170 default "^Subject:"

color quoted		  color135 default        # Subtext 0
color quoted1		  color141 default        # Subtext 1
color quoted2		  color170 default        # Surface 2
color quoted3		  color246 default        # Surface 1
color quoted4		  color246 default
color quoted5		  color246 default

color body		color170 default		[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+               # email addresses Pinkish Purple
color body	  color170 default		(https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+        # URLs Pinkish Purple
color body		color141 default		(^|[[:space:]])\\*[^[:space:]]+\\*([[:space:]]|$) # *bold* text Dark Purple
color body		color141 default		(^|[[:space:]])_[^[:space:]]+_([[:space:]]|$)     # _underlined_ text Dark Purple
color body		color141 default		(^|[[:space:]])/[^[:space:]]+/([[:space:]]|$)     # /italic/ text Dark Purple

color sidebar_flagged   color141 default    # Mailboxes with flagged mails are Dark Purple
color sidebar_new       color170 default    # Mailboxes with new mail are Pinkish Purple

